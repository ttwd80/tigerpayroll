<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="username"
			value="#{systemProperties['PG_USER'] ?: 'tigerhrdev'}" />
		<property name="password"
			value="#{systemProperties['PG_PASSWORD'] ?: 'tigerhrdev'}" />
		<property name="url"
			value="#{systemProperties['PG_PASSWORD'] != null ? 'jdbc:postgresql://127.0.0.1:5436/tigerhrdev' :'jdbc:postgresql://127.0.0.1/tigerhrdev'}" />
		<property name="driverClassName" value="org.postgresql.Driver" />
	</bean>
</beans>
